<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.believe.attendancemanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon"
        android:label="Attendance manager"
        android:roundIcon="@mipmap/ic_appicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddNewStudent"
            android:label="@string/title_activity_add_new_student"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DeleteClass"
            android:label="@string/title_activity_delete_class"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
        <activity
            android:name=".ShowIndividualAttendence"
            android:label="@string/title_activity_show_individual_attendence"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
        <activity
            android:name=".ShowAttendence"
            android:label="@string/title_activity_show_attendence"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TakeAttendance"
            android:label="@string/title_activity_take_attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseClass"
            android:label="@string/title_activity_choose_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddClass"
            android:label="@string/title_activity_add_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>